# User Service Environment Configuration

# Application
SERVER_PORT=8081
APPLICATION_NAME=user-service

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecommerce_users
DB_USERNAME=postgres
DB_PASSWORD=postgres123

# JPA Configuration
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-user-service-2024
JWT_EXPIRATION=86400000

# Logging
LOGGING_LEVEL=INFO
LOGGING_PATTERN=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW-DETAILS=always

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=* 