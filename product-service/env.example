# Product Service Environment Configuration

# Application
PORT=8082
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/ecommerce_products
MONGODB_DB_NAME=ecommerce_products

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Logging
LOG_LEVEL=info
LOG_FILE=logs/product-service.log

# Security
JWT_SECRET=your-super-secret-jwt-key-for-product-service-2024
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# External Services
USER_SERVICE_URL=http://user-service:8081
ORDER_SERVICE_URL=http://order-service:8083 